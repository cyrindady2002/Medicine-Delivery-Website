<section>
  <div class="row mt-4">
    <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>  
  </div>
  <div class="container">
    <table class="table mt-5" id="productsTable">
      <thead>
        <tr>
           <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Price</th>
          <th>Image</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.name}}</td>
          <td>{{this.category}}</td>
          <td>{{this.price}}</td>
          <td><img style="height:50px;width:50px" src="/product-images/{{this._id}}.png" alt=""></td>

          <td>
          <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
          <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>  
  </div>
</section>
<script>
  $(function () {
    $('#productsTable').DataTable();
});
</script>
